<div id="<%= dom_id(item) %>" class="p-4 bg-white shadow-md rounded-md mb-4">
  <p class="text-lg font-semibold">
    <strong>タイトル</strong> <%= item.title %>
  </p>

  <p class="mt-2">
    <strong>説明欄</strong> <%= item.description %>
  </p>

  <p class="mt-2">
    <strong>動画URL:</strong> <%= link_to item.item_url, item.item_url, class: "text-blue-500 underline" %>
  </p>
</div>

<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold mb-6">アイテム一覧</h1>

<div id="items" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @items.each do |item| %>
    <div class="aspect-[9/16]"> <%# 枠の縦横比を指定 %>
      <%= render 'item', item: item %>
    </div>
  <% end %>
</div>


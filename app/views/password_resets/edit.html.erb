<div class="mx-5 mt-5 sm:mt-20" data-controller="video-preview">
  <h1 class="text-2xl font-bold my-20 text-center">パスワード再設定</h1>
  <div class="p-6 m-auto bg-slate-50 rounded-md shadow-md sm:max-w-md mt-5 sm:mt-20">
    <div class="space-y-4">
      <%= form_with model: @user, url: password_resets_path(@token), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="mb-4 font-bold">
          <%= f.label :email, 'メールアドレス', class: 'block text-sm font-bold mb-2' %>
          <span class="block bg-gray-100 p-2 rounded border border-gray-300">
            <%= @user.email %></span>
        </div>

        <div class="mb-4 font-bold">
          <%= f.label :password, '新しいパスワード', class: 'block text-sm font-bold mb-2' %>
          <%= f.password_field :password, class: 'w-full input input-bordered input-primary', required: true, autocomplete: 'new-password' %>
        </div>

        <div class="mb-6 font-bold">
          <%= f.label :password_confirmation, 'パスワード確認', class: 'block text-sm font-bold mb-2' %>
          <%= f.password_field :password_confirmation, class: 'w-full input input-bordered input-primary', required: true, autocomplete: 'new-password' %>
        </div>

        <div class="flex justify-end space-x-2 mt-4 font-bold">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <i class="ph ph-lock-laminated large-icon"></i> パスワードを更新
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

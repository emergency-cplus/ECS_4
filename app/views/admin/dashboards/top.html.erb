<div class="hero min-h-screen" style="background-image: url(<%= image_url('top.jpg') %>); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <div class="hero-overlay bg-opacity-60"></div>
  
  <!-- hero-content を使わず、独自のレイアウトコンテナを使用 -->
  <div class="relative z-10 w-full px-8"> <!-- 独自のスタイリング -->
    <h1 class="mb-20  text-4xl font-bold text-white text-center">管理画面</h1>
      
      <!-- 3列レイアウト -->
      <div class="flex gap-8 justify-center"> <!-- justify-center を追加 -->
        <!-- 以下の内容は同じ -->
        <!-- ユーザー管理ブロック -->
        <div class="flex-1">
          <h2 class="text-2xl font-bold text-white text-center mb-6">ユーザー管理</h2>
          <div class="card bg-opacity-25 shadow-xl hover:translate-y-[-4px] transition-transform duration-200">
            <div class="card-body">
              <ul class="menu menu-vertical text-white">
                <li><%= link_to '新規ユーザー登録', 'users/new', class: 'hover:text-gray-300' %></li>
                <li><%= link_to 'ユーザー一覧', 'users', class: 'hover:text-gray-300' %></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- アイテム管理ブロック -->
        <div class="flex-1">
          <h2 class="text-2xl font-bold text-white text-center mb-6">アイテム管理</h2>
          <div class="card bg-opacity-75 shadow-xl hover:translate-y-[-4px] transition-transform duration-200">
            <div class="card-body">
              <ul class="menu menu-vertical text-white">
                <li><%= link_to '新規アイテム登録', '#', class: 'hover:text-gray-300' %></li>
                <li><%= link_to 'アイテム一覧', '#', class: 'hover:text-gray-300' %></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- 送信履歴ブロック -->
        <div class="flex-1">
          <h2 class="text-2xl font-bold text-white text-center mb-6">送信履歴</h2>
          <div class="card bg-opacity-75 shadow-xl hover:translate-y-[-4px] transition-transform duration-200">
            <div class="card-body">
              <ul class="menu menu-vertical text-white">
                <li><%= link_to '送信履歴一覧', '#', class: 'hover:text-gray-300' %></li>
                <li><%= link_to '送信状況', '#', class: 'hover:text-gray-300' %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
